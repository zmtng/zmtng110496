<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- GRADIENT BACKGROUND: This view will only be visible for 'M' cards -->
        <ImageView
            android:id="@+id/gradient_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/rainbow_gradient"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Kopfzeile: Name • Set • Nummer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:text="Name"
                    android:textColor="@color/collection_card_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_badge"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:text="Set"
                    android:textColor="@color/collection_card_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/cardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_badge"
                    android:paddingStart="8dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="4dp"
                    android:text="Nummer"
                    android:textColor="@color/collection_card_text"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#11000000" />

            <!-- Zweite Zeile: Preis • In Sammlung: [Anzahl] [-] [+] -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cardPreis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:text="Preis"
                    android:textColor="@color/collection_card_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Sammlung:"
                    android:textColor="@color/collection_card_text"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/cardAnzahl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:text="0"
                    android:textColor="@color/collection_card_text"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Spacer schiebt Buttons nach rechts -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Decrement -->
                <ImageButton
                    android:id="@+id/btnDecrement"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_iconbutton"

                    android:scaleType="centerInside"
                    android:src="@drawable/outline_arrow_drop_down_24" />

                <!-- Increment -->
                <ImageButton
                    android:id="@+id/btnIncrement"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_iconbutton"

                    android:scaleType="centerInside"
                    android:src="@drawable/outline_arrow_drop_up_24" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

