<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Infos zur Karte (links oben) -->
        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnAddToWishlist"
            android:layout_marginEnd="16dp"
            tools:text="Card Name That Is Very Long" />

        <TextView
            android:id="@+id/tvCardSet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            app:layout_constraintStart_toStartOf="@id/tvCardName"
            app:layout_constraintTop_toBottomOf="@id/tvCardName"
            app:layout_constraintEnd_toEndOf="@id/tvCardName"
            tools:text="Set Name - #001" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvCardName"
            app:layout_constraintTop_toBottomOf="@id/tvCardSet"
            tools:text="Anzahl: x4" />

        <!-- Button (rechts) -->
        <ImageButton
            android:id="@+id/btnAddToWishlist"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_add_to_wishlist"
            style="?attr/materialIconButtonStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Zur eigenen Wunschliste hinzufÃ¼gen"/>

        <!-- Status-Badges (links unten) -->
        <LinearLayout
            android:id="@+id/statusBadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvQuantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/badgeInCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background_green"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="In Sammlung"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/badgeOnWishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/badge_background_yellow"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Auf Wunschliste"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>